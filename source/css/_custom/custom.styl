// Custom styles.
body{
	background: #333333 url('/images/background.jpg') no-repeat center fixed;
}

#header {
	background: #f0f0f0;
}


#content, #comments {
  background: rgba(255, 255, 255, 0.76);
  padding: 2em;
	border-radius: 1em;
}

@media print {
	#header, #comments, #footer, .highlight figcaption a {
		display: none;
	}
}

.theme-next #ds-thread #ds-reset .ds-replybox {
	border: 1px solid #78f5f5;
	background: #ffffff;
}

#ds-thread #ds-reset a.ds-like-thread-button {
	background: #efefef;
	-moz-border-radius: 2px;
	-webkit-border-radius: 2px;
	border-radius: 2px;
	background-image: -webkit-gradient(linear, 0 0, 0 100%, from(#efefef), color-stop(25%, #efefef), to(#efefef));
	background-image: -webkit-linear-gradient(#fff, #fff 25%, #efefef);
	background-image: -moz-linear-gradient(top, #fff, #fff 25%, #efefef);
	background-image: -ms-linear-gradient(#fff, #fff 25%, #efefef);
	background-image: linear-gradient(#fff, #fff 25%, #efefef);
}
#ds-thread #ds-reset a.ds-like-thread-button :hover{
	background: #ffffff;
	background-image: -webkit-gradient(linear, 0 0, 0 100%, from(#ffffff), color-stop(25%, #ffffff), to(#ffffff));
	background-image: -webkit-linear-gradient(#fff, #fff 25%, #ffffff);
	background-image: -moz-linear-gradient(top, #fff, #fff 25%, #ffffff);
	background-image: -ms-linear-gradient(#fff, #fff 25%, #ffffff);
	background-image: linear-gradient(#fff, #fff 25%, #ffffff);
}